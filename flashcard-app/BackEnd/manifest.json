{
  "manifest_version": 3,
  "name": "AI Flashcard Creator",
  "description": "Create flashcards instantly from selected webpage text.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Create Flashcard"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/buttonManager.js",
        "content/selectionTracker.js",
        "content/program.js"
      ],
      "css": [
        "content/button.css",
        "content/theme.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
