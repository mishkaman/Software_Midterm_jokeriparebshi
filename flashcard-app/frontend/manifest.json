{
  "manifest_version": 3,
  "name": "Your Flashcard Extension",
  "version": "1.0.0",
  "description": "Practice flashcards with hand gestures.",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
